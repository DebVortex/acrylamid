#!/usr/bin/env python

import os
import argparse

from time import time

def touch(path, seconds=None):

    if seconds is not None:
        seconds = (time() + seconds, )*2

    os.utime(path, seconds)


if __name__ == '__main__':

    parser = argparse.ArgumentParser(description='BSD touch equivalent')
    parser.add_argument("-A", type=int, dest="seconds", default=None, metavar="N",
        help="adjust timestamp to current time plus seconds.")
    parser.add_argument("path", metavar="FILE")

    options = parser.parse_args()
    touch(options.path, options.seconds)
